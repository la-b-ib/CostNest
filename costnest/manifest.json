{
  "manifest_version": 3,
  "name": "CostNest",
  "version": "1.0.0",
  "description": "Track and analyze online shopping expenses with secure PIN access and insightful data visualization",
  "author": "Labib Bin Shahed",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CostNest - Expense Tracker",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}